---
import { profile } from '@/entities/profile';
---

<section id="about" class="bg-card py-20">
  <div class="container mx-auto px-4">
    <div class="mx-auto max-w-4xl">
      <h2 class="mb-12 text-center text-4xl font-bold text-foreground md:text-5xl">About Me</h2>

      <div class="grid items-center gap-12 md:grid-cols-2">
        <div>
          <div class="aspect-square overflow-hidden rounded-2xl shadow-xl">
            <img src={profile.image} alt={profile.name} class="h-full w-full object-cover" />
          </div>
        </div>

        <div class="space-y-6">
          {
            profile.bio.map((paragraph) => (
              <p class="text-foreground/80 text-lg leading-relaxed" set:html={paragraph} />
            ))
          }

          <div class="flex flex-wrap gap-4 pt-4">
            <div class="flex items-center gap-2 text-muted-foreground">
              <svg
                class="h-5 w-5 text-primary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span>{profile.location}</span>
            </div>
            <div class="flex items-center gap-2 text-muted-foreground">
              <svg
                class="h-5 w-5 text-primary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <span>{profile.status}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
