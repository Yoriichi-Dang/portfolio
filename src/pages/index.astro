---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { HeroSection } from '../components/home/HeroSection';
import AboutSection from '../components/home/AboutSection.astro';
import SkillsSection from '../components/home/SkillsSection.astro';
import { ProjectsSection } from '../components/home/ProjectsSection';
import RecentPostsSection from '../components/home/RecentPostsSection.astro';
import ContactSection from '../components/home/ContactSection.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-white dark:bg-gray-900">
		<Header />
		
		<main>
			<!-- Hero Section - React with Framer Motion -->
			<HeroSection client:load />

			<!-- About Section - Astro (Static) -->
			<AboutSection />

			<!-- Skills Section - Astro (Static) -->
			<SkillsSection />

			<!-- Projects Section - React with animations -->
			<ProjectsSection client:load />

			<!-- Recent Blog Posts - Astro (Static) -->
			<RecentPostsSection />

			<!-- Contact Section - Astro (Static CTA) -->
			<ContactSection />
		</main>

		<Footer />
	</body>
</html>

<style>
	/* Smooth scroll behavior */
	html {
		scroll-behavior: smooth;
	}

	/* Custom scrollbar */
	::-webkit-scrollbar {
		width: 10px;
	}

	::-webkit-scrollbar-track {
		@apply bg-gray-100 dark:bg-gray-800;
	}

	::-webkit-scrollbar-thumb {
		@apply bg-gray-400 dark:bg-gray-600 rounded-full;
	}

	::-webkit-scrollbar-thumb:hover {
		@apply bg-gray-500 dark:bg-gray-500;
	}
</style>
