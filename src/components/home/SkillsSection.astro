---
const skills = [
  {
    category: 'Frontend',
    items: ['React', 'Next.js', 'TypeScript', 'Tailwind CSS', 'Astro']
  },
  {
    category: 'Backend',
    items: ['Node.js', 'Express', 'PostgreSQL', 'MongoDB', 'Redis']
  },
  {
    category: 'Tools & Others',
    items: ['Git', 'Docker', 'AWS', 'Vercel', 'Figma']
  }
];
---

<section id="skills" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-4 text-gray-900 dark:text-white">
        Skills & Technologies
      </h2>
      <p class="text-center text-gray-600 dark:text-gray-400 mb-12 text-lg">
        Technologies I work with to bring ideas to life
      </p>

      <div class="grid md:grid-cols-3 gap-8">
        {skills.map((skillGroup) => (
          <div class="bg-white dark:bg-gray-900 rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <h3 class="text-2xl font-bold mb-6 text-blue-600 dark:text-blue-400">
              {skillGroup.category}
            </h3>
            <ul class="space-y-3">
              {skillGroup.items.map((skill) => (
                <li class="flex items-center gap-3 text-gray-700 dark:text-gray-300">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-lg">{skill}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <!-- Tech Stack Icons -->
      <div class="mt-16 flex flex-wrap justify-center gap-8 items-center opacity-60">
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/react/react-original.svg" alt="React" class="w-12 h-12" />
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/typescript/typescript-original.svg" alt="TypeScript" class="w-12 h-12" />
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/nodejs/nodejs-original.svg" alt="Node.js" class="w-12 h-12" />
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/postgresql/postgresql-original.svg" alt="PostgreSQL" class="w-12 h-12" />
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/docker/docker-original.svg" alt="Docker" class="w-12 h-12" />
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/git/git-original.svg" alt="Git" class="w-12 h-12" />
      </div>
    </div>
  </div>
</section>
